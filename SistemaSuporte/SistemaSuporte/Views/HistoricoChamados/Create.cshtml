@model SistemaSuporte.Models.HistoricoChamado

@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>HistoricoChamado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChamadoId" class="control-label"></label>
                <select asp-for="ChamadoId" class ="form-control" asp-items="ViewBag.ChamadoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Acao" class="control-label"></label>
                <input asp-for="Acao" class="form-control" />
                <span asp-validation-for="Acao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRegistro" class="control-label"></label>
                <input asp-for="DataRegistro" class="form-control" />
                <span asp-validation-for="DataRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (TempData["MensagemSucesso"] != null)
            {
                <div id="mensagem-sucesso" class="alert alert-success">
                    @TempData["MensagemSucesso"]
                </div>

                <script>
                    / Remove a mensagem após 5 segundos (5000 ms)
                    setTimeout(function () {
                        const msg = document.getElementById("mensagem-sucesso");
                        if (msg) {
                            msg.style.transition = "opacity 0.5s";
                            msg.style.opacity = "0";
                            setTimeout(() => msg.remove(), 500);
                        }
                    }, 5000);
                </script>
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


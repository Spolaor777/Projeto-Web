@model SistemaSuporte.Models.Chamado

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Excluir Chamado";
}

<div class="painel-dashboard">
    <div class="delete-box">
        <h1>Excluir Chamado</h1>

        <p>Tem certeza que deseja excluir o chamado <strong>@Model.Titulo</strong>?</p>

        <p>
            <strong>Usuário:</strong> @Model.Usuario?.Nome <br />
            <strong>Categoria:</strong> @Model.Categoria?.NomeCategoria <br />
            <strong>Status:</strong> @Model.Status <br />
            <strong>Data de abertura:</strong> @Model.DataAbertura.ToString("dd/MM/yyyy HH:mm")
        </p>

        <form asp-action="Delete" asp-controller="AdminChamados" method="post">
            <input type="hidden" asp-for="ChamadoId" />

            <button type="submit" class="btn-admin btn-admin-danger">
                Excluir
            </button>

            <a asp-action="Index" asp-controller="AdminChamados"
               class="btn-admin btn-admin-secondary btn-cancelar">
                Cancelar
            </a>
        </form>
    </div>
</div>

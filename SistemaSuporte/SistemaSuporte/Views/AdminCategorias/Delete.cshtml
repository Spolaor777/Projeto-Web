@model SistemaSuporte.Models.Categoria

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Excluir";
}

<div class="painel-dashboard">

    <h1>Excluir Categoria</h1>

    <div class="form-admin">
        <p>Tem certeza que deseja excluir <strong>@Model.NomeCategoria</strong>?</p>

        <form asp-action="Delete" asp-controller="AdminCategorias">
            <input type="hidden" asp-for="CategoriaId" />

            <button class="btn-admin btn-admin-danger">Excluir</button>

            <a asp-action="Index" asp-controller="AdminCategorias"
               class="btn-admin btn-admin-secondary">
                Cancelar
            </a>
        </form>

    </div>

</div>


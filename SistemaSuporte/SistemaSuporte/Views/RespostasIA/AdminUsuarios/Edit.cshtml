@model SistemaSuporte.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Editar Usuário";
}

<div class="form-admin">

    <h1>Editar Usuário</h1>

    <form asp-action="Edit" asp-controller="AdminUsuarios">

        <input type="hidden" asp-for="UsuarioId" />

        <label>Nome</label>
        <input asp-for="Nome" />

        <label>Email</label>
        <input asp-for="Email" />

        <label>Tipo</label>
        <select asp-for="Tipo">
            <option value="cliente">Cliente</option>
            <option value="admin">Admin</option>
        </select>

        <button class="btn-admin btn-admin-primary">Salvar</button>

        <a asp-action="Index" asp-controller="AdminUsuarios"
           class="btn-admin btn-admin-secondary">
            Voltar
        </a>

    </form>

</div>
